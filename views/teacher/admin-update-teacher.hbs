<div class="container">
  <h1>Teacher Profile</h1>
  <div class="alert alert-success" role="alert" style="display: {{#if message}}block{{else}}none{{/if}}">
    {{message}}
  </div>

  <form action="/teacher/{{teacherFound._id}}/update" method="POST">
    <div class="form-group">
      <label for="program">Program:</label>
      <select class="form-control" id="program" name="program">
        {{#each programs}}
          <option value="{{this._id}}" {{#if (equals this._id program)}}selected{{/if}}>{{this.name}}</option>
        {{/each}}
      </select>
    </div>

    <div class="form-group">
      <label for="classLevel">Class Level:</label>
      <select class="form-control" id="classLevel" name="classLevel">
        {{#each classLevels}}
          <option value="{{this._id}}" {{#if (equals this._id classLevel)}}selected{{/if}}>{{this.name}}</option>
        {{/each}}
      </select>
    </div>

    <div class="form-group">
      <label for="academicYear">Academic Year:</label>
      <select class="form-control" id="academicYear" name="academicYear">
        {{#each academicYears}}
          <option value="{{this._id}}" {{#if (equals this._id academicYear)}}selected{{/if}}>{{this.name}}</option>
        {{/each}}
      </select>
    </div>

    <div class="form-group">
      <label for="subject">Subject:</label>
      <select class="form-control" id="subject" name="subject">
        {{#each subjects}}
          <option value="{{this._id}}" {{#if (equals this._id subject)}}selected{{/if}}>{{this.name}}</option>
        {{/each}}
      </select>
    </div>

    <button type="submit" class="btn btn-primary">Update Teacher</button>
  </form>
</div>
