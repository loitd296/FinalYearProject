{{> header_admin}}

<div class="content">
    <div class="row">
        <div class="col-md-offset-1 col-md-12">
            <div class="panel">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col col-sm-3 col-xs-12">
                            <h4 class="title">Teacher <span>List</span></h4>
                        </div>
                        <div class="col-sm-9 col-xs-12 text-right">
                            <form action="/academic-years/search" method="GET" class="form-inline float-right">
                                <div class="input-group">
                                    <input type="text" name="search" class="form-control form-control-sm flex-fill"
                                        placeholder="Search">
                                    <div class="input-group-append">
                                        <button type="submit" class="btn btn-primary btn-sm"
                                            style="margin-left: 10px;">Search</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="col-sm-12 col-xs-12 text-right">
                            <div class="btn_group text-right">
                                <a href="/teacher/admin/register" class="btn btn-default" style="margin-left: 10px;"><i class="fas fa-plus"
                                        ></i></a>
                                <button class="btn btn-default" title="Pdf" style="margin-left: 10px;"><i
                                        class="fa fa-file-pdf"></i></button>
                                <button class="btn btn-default" title="Excel" style="margin-left: 10px;"><i
                                        class="fas fa-file-excel"></i></button>
                            </div>
                        </div>


                    </div>
                </div>
                <div class="panel-body table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Name</th>
                                <th scope="col">Email</th>
                                <th scope="col">Date Employed</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                {{#each teachers}}
                            <tr>
                                <td>{{this.name}}</td>
                                <td>{{this.email}}</td>
                                <td>{{this.dateEmployed}}</td>
                                <td>
                                    <ul class="action-list">
                                        <li><a href="/teacher/{{this._id}}/update" data-tip="edit"><i
                                                    class="fa fa-edit"></i></a></li>
                                        <li><a href="/teacher/{{this._id}}/delete" data-tip="delete"><i
                                                    class="fa fa-trash"></i></a></li>
                                        <li><a href="/teacher/{{this._id}}/view" data-tip="view"><i
                                                    class="fas fa-eye"></i></a></li>

                                    </ul>
                                </td>
                                <!-- Other table data -->
                            </tr>
                            {{/each}}

                            </tr>
                        </tbody>
                    </table>
                </div>
               <div class="panel-footer">
                    <div class="row">
                        <div class="col col-sm-6 col-xs-6">showing <b>{{currentPageEntries}}</b> out of
                            <b>{{totalEntries}}</b> entries</div>
                        <div class="col-sm-6 col-xs-6">
                            <ul class="pagination hidden-xs pull-right">
                                {{#if hasPreviousPage}}
                                <li><a href="/teacher/index_admin?page={{previousPage}}&search={{search}}">&lt;</a></li>
                                {{/if}}
                                {{#each pages}}
                                <li{{#if current}} class="active" {{/if}}><a
                                        href="/teacher/index_admin?page={{this}}&search={{search}}">{{this}}</a></li>
                                {{/each}}       
                                {{#if hasNextPage}}
                                <li><a href="/teacher/index_admin?page={{nextPage}}&search={{search}}">&gt;</a></li>

                                {{/if}}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>