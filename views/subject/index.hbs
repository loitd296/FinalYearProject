{{> header_admin}}

<div class="content">
    <div class="row">
        <div class="col-md-offset-1 col-md-10">
            <div class="panel">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col col-sm-3 col-xs-12">
                            <h4 class="title">Year Group <span>List</span></h4>
                        </div>
                        <div class="col-sm-9 col-xs-12 text-right">
                            <form action="/subject/search" method="GET" class="form-inline float-right">
                                <div class="input-group">
                                    <input type="text" name="search" class="form-control form-control-sm flex-fill"
                                        placeholder="Search">
                                    <div class="input-group-append">
                                        <button type="submit" class="btn btn-primary btn-sm">Search</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="col-sm-9 col-xs-12 text-right">
                            <div class="btn_group text-right">
                                <button class="btn btn-default" title="Create">
                                    <a href="/subject/createSubject" class="btn btn-primary"><i
                                            class="fas fa-plus"></i></a>
                                </button>
                                <button class="btn btn-default" title="Pdf"><i class="fa fa-file-pdf"></i></button>
                                <button class="btn btn-default" title="Excel"><i class="fas fa-file-excel"></i></button>
                            </div>
                        </div>


                    </div>
                </div>
                <div class="panel-body table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Name</th>
                                <th scope="col">Description</th>
                                <th scope="col">Program</th>
                                <th scope="col">Academic Term</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                {{#each subjects}}
                            <tr>
                                <td>{{this.name}}</td>
                                <td>{{this.description}}</td>
                                <td>{{this.program.name}}</td> <!-- Access the 'name' property of the populated 'program' object -->
                                <td>{{this.academicTerm.name}}</td> <!-- Access the 'name' property of the populated 'academicTerm' object -->
                                <td>
                                    <ul class="action-list">
                                        <li><a href="/subject/{{this._id}}/update" data-tip="edit"><i
                                                    class="fa fa-edit"></i></a></li>
                                        <li><a href="/subject/{{this._id}}/delete" data-tip="delete"><i
                                                    class="fa fa-trash"></i></a></li>
                                        <li><a href="/subject/{{this._id}}" data-tip="view"><i
                                                    class="fas fa-eye"></i></a></li>

                                    </ul>
                                </td>
                                <!-- Other table data -->
                            </tr>
                            {{/each}}

                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col col-sm-6 col-xs-6">showing <b>5</b> out of <b>25</b> entries</div>
                        <div class="col-sm-6 col-xs-6">
                            <ul class="pagination hidden-xs pull-right">
                                <li><a href="#">
                                        << /a>
                                </li>
                                <li class="active"><a href="#">1</a></li>
                                <li><a href="#">2</a></li>
                                <li><a href="#">3</a></li>
                                <li><a href="#">4</a></li>
                                <li><a href="#">5</a></li>
                                <li><a href="#">></a></li>
                            </ul>
                            <ul class="pagination visible-xs pull-right">
                                <li><a href="#">
                                        << /a>
                                </li>   
                                <li><a href="#">></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>