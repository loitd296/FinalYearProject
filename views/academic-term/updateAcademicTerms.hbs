{{> header_admin}}

<div class="content">
  <div class="container mt-4">
    <h2>Update Academic Term</h2>
    <form
      id="updateForm"
      action="/academic-term/{{academicTerm._id}}/update"
      method="POST"
    >
      <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="{{academicTerm.name}}" />
      </div>
      <div class="form-group">
        <label for="description">Description:</label>
        <textarea id="description" name="description">{{academicTerm.description}}</textarea>
      </div>
      <div class="form-group">
        <label for="duration">Duration:</label>
        <input type="text" id="duration" name="duration" value="{{academicTerm.duration}}" />
      </div>
      <button type="submit" class="btn btn-success">Update Academic Term</button>
    </form>
  </div>
</div>