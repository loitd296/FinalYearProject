          demo.initChartsPages();
        });
      </script>
      <script>
        document.addEventListener("DOMContentLoaded", function () {
          // Get the current path
          var path = window.location.pathname;

          // Remove the trailing slash if exists
          path = path.replace(/\/$/, "");

          // Get the list items in the sidebar
          var sidebarItems = document.querySelectorAll(".sidebar-wrapper .nav li");

          // Loop through the items and check if the path matches
          sidebarItems.forEach(function (item) {
            var link = item.querySelector("a").getAttribute("href");

            // Check if the link matches the path
            if (link === path) {
              item.classList.add("active");
            }
          });
        });
      </script>
