<!-- chatbot.hbs -->

<html>
  <head>
    <title>Chatbot</title>
  </head>
  <body>
    <h1>Chatbot</h1>
    <div id="chatbox">
      <!-- Display chatbot responses here -->
    </div>
    <form>
      <input type="text" id="query" placeholder="Ask a question..." />
      <button type="button" onclick="sendQuery()">Send</button>
    </form>

  </body>
</html>

<!-- Add this JavaScript code to your chatbot.hbs file -->
<script>
  // Function to handle form submission function sendQuery() { const query =
  document.getElementById('query').value; // Make an AJAX request to the /chat
  route fetch('/chat', { method: 'POST', headers: { 'Content-Type':
  'application/json', }, body: JSON.stringify({ query }), }) .then((response) =>
  response.json()) .then((data) => { // Display the chatbot response in the
  chatbox const chatbox = document.getElementById('chatbox'); chatbox.innerHTML
  += `<p><strong>You:</strong> ${query}</p>`; chatbox.innerHTML +=
  `<p><strong>Chatbot:</strong> ${data.response}</p>`; }) .catch((error) => {
  console.error('Error sending query:', error); }); }
</script>