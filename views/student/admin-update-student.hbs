{{> header_admin}}

<div class="content">
    <h1 class="mb-4">Admin Update Student</h1>

    <form action="/student/{{studentFound._id}}/update" method="POST">
        <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" value="{{student.name}}" class="form-control" />
        </div>

        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" value="{{student.email}}" class="form-control" />
        </div>

        <div class="form-group">
            <label for="prefectName">Prefect Name:</label>
            <input type="text" id="prefectName" name="prefectName" value="{{student.prefectName}}" class="form-control" />
        </div>

        <div class="form-group">
            <label for="program">Program:</label>
            <select id="program" name="program" class="form-control">
                {{#each programs}}
                <option value="{{this._id}}" {{#if (equals this._id student.program)}}selected{{/if}}>{{this.name}}</option>
                {{/each}}
            </select>
        </div>

        <div class="form-group">
            <label for="classLevel">Class Level:</label>
            <select id="classLevel" name="classLevel" class="form-control">
                {{#each classLevels}}
                <option value="{{this._id}}" {{#if (equals this._id student.classLevel)}}selected{{/if}}>{{this.name}}</option>
                {{/each}}
            </select>
        </div>

        <div class="form-group">
            <label for="academicYear">Academic Year:</label>
            <select id="academicYear" name="academicYear" class="form-control">
                {{#each academicYears}}
                <option value="{{this._id}}" {{#if (equals this._id student.academicYear)}}selected{{/if}}>{{this.name}}</option>
                {{/each}}
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Update Student</button>
    </form>
</div>
