<head>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>

<script>
  // Convert data to arrays
  var studentNames = [];
  var studentTotalGrades = [];

  // Populate the arrays manually
  {{#each studentGrades}}
    studentNames.push("{{this.studentName}}");  
    studentTotalGrades.push("{{this.totalGrade}}");
  {{/each}}

  // Convert data to chart dataset
  var chartData = {
    labels: studentNames,
    datasets: [{
      label: 'Total Grades',
      data: studentTotalGrades,
      backgroundColor: 'rgba(75, 192, 192, 0.2)',
      borderColor: 'rgba(75, 192, 192, 1)',
      borderWidth: 1
    }]
  };

  // Chart configuration
  var chartConfig = {
    type: 'bar',
    data: chartData,
    options: {
      scales: {
        y: {
          beginAtZero: true
        }
      }
    }
  };

  // Get chart canvas element and initialize the chart
  var topStudentsChart = new Chart(document.getElementById('topStudentsChart'), chartConfig);

   
   // Convert exam performance data to arrays
  var examNames = [];
  var averageScores = [];

  // Populate the arrays manually
  {{#each examPerformanceData}}
    examNames.push("{{this.examName}}");  
    averageScores.push({{this.averageScore}});
  {{/each}}

  // Convert exam performance data to chart dataset
  var examPerformanceChartData = {
    labels: "{{examNames}}",
    datasets: [{
      label: 'Average Score',
      data: "{{averageScores}}",
      backgroundColor: 'rgba(54, 162, 235, 0.2)',
      borderColor: 'rgba(54, 162, 235, 1)',
      borderWidth: 1
    }]
  };

  // Chart configuration for exam performance
  var examPerformanceChartConfig = {
    type: 'line',
    data: examPerformanceChartData,
    options: {
      scales: {
        y: {
          beginAtZero: true
        }
      }
    }
  };

  // Get exam performance chart canvas element and initialize the chart
  var examPerformanceChart = new Chart(document.getElementById('examPerformanceChart'), examPerformanceChartConfig);
  
</script>



