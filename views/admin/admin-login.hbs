{{> header_admin}}

<style>
  /* Add your custom CSS styles here */
  .content {
    max-width: 600px;
    margin: 0 auto;
    padding: 40px;
     margin-top: 60px;
  margin-bottom: 60px;
    background-color: #F3F5F7;
    border-radius: 5px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
  }

  .content h1 {
    color: #333;
    text-align: center;
    margin-bottom: 30px;
  }

  .form-group label {
    color: #333;
  }

  .form-control {
    background-color: #FFF;
    color: #555;
    border: 2px solid #FFF;
    transition: border-color 0.3s ease-in-out;
  }

  .form-control:focus {
    border-color: #5CB85C;
    outline: none;
  }

  button.btn-primary {
    background-color: #337AB7;
    border-color: #337AB7;
    color: #FFF;
  }

  button.btn-primary:hover {
    background-color: #286090;
    border-color: #204D74;
  }

  a.btn.btn-primary {
    background-color: #5CB85C;
    border-color: #5CB85C;
    color: #FFF;
    margin-left: 10px;
  }

  a.btn.btn-primary:hover {
    background-color: #449D44;
    border-color: #398439;
  }
   .error-message {
    color: #d9534f; /* Red color for error messages */
    margin-top: 5px;
    font-size: 14px;
  }
  .success-message {
    color: #5cb85c; /* Green color for success messages */
    margin-top: 5px;
    font-size: 14px;
  }
</style>
<div class="content">
  <h1>Admin Login</h1>
  <form id="loginForm" action="/admin/login" method="POST">
    <div class="form-group row">
      <label for="email" class="col-sm-2 col-form-label">Email:</label>
      <div class="col-sm-6">
        <input type="email" name="email" id="email" class="form-control" required />
        <div id="emailError" class="error-message"></div>
      </div>
    </div>
    <div class="form-group row">
      <label for="password" class="col-sm-2 col-form-label">Password:</label>
      <div class="col-sm-6">
        <input type="password" name="password" id="password" class="form-control" required />
        <div id="passwordError" class="error-message"></div>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-2"></div>
      <div class="col-sm-6">
        <button type="submit" class="btn btn-primary">Login</button>
        <div id="successMessage" class="success-message" style="display: none;">Login successful!</div>
      </div>
    </div>
  </form>
</div>

<script>
  // JavaScript for client-side validation
  const form = document.getElementById('loginForm');
  form.addEventListener('submit', function(event) {
    const emailInput = document.getElementById('email');
    const passwordInput = document.getElementById('password');
    const emailError = document.getElementById('emailError');
    const passwordError = document.getElementById('passwordError');
    const successMessage = document.getElementById('successMessage');
    let valid = true;

    // Validate email format (you can use a more sophisticated validation if needed)
    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    if (!emailRegex.test(emailInput.value)) {
      emailError.textContent = 'Please enter a valid email address.';
      valid = false;
    } else {
      emailError.textContent = ''; // Clear error message if valid
    }

    // Check if the password meets certain criteria (e.g., minimum length)
    // You can add more password validation rules here

    if (passwordInput.value.length < 6) {
      passwordError.textContent = 'Password must be at least 6 characters.';
      valid = false;
    } else {
      passwordError.textContent = ''; // Clear error message if valid
    }

    if (valid) {
      // Hide error messages and show success message upon successful form submission
      emailError.textContent = '';
      passwordError.textContent = '';
      successMessage.style.display = 'block';
    } else {
      event.preventDefault(); // Prevent form submission if there are errors
      successMessage.style.display = 'none'; // Hide success message if there are errors
    }
  });
</script>


