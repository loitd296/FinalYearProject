{{> header_admin}}

<div class="content">
    <div class="container mt-4">
        <h2>Update Year Group</h2>
        <form action="/year-group/{{yearGroup._id}}/update" method="POST">
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" name="name" id="name" class="form-control" value="{{yearGroup.name}}" required>
            </div>
            <div class="form-group">
                <label for="academicTerm">Academic Term:</label>
                <select name="academicTerm" id="academicTerm" class="form-control" required>
                    <option value="">Select an academic term</option>
                    {{#each academicYears}}
                    <option value="{{this._id}}" {{#if (equals this._id oldAcademicYear)}}selected{{/if}}>{{this.name}}</option>
                    {{/each}}
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Update Year Group</button>
        </form>
    </div>
</div>
